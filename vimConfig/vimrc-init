set number
set relativenumber

let mapleader = ","
nnoremap <leader>w <esc>:w<cr>
inoremap <leader>w <esc>:w<cr>

noremap <Leader>e :quit!<CR> " Quit current window
noremap <Leader>E :qa!<CR> " Quit all windows

" move Begin or End
nnoremap <leader>z 0
nnoremap <leader>v $

syntax on
set autoindent
set tabstop=4
set softtabstop=4
set shiftwidth=4
set shiftround
set expandtab

set ruler

" paste toggle
set pastetoggle=<F2>

