" windows, Visual Studio, _visvimrc

let mapleader=','

inoremap <M-h> <Left>
inoremap <M-j> <Down>
inoremap <M-k> <Up>
inoremap <M-l> <Right>

inoremap <M-i> <esc>Bi
inoremap <M-o> <esc>Ea
inoremap <M-u> <Home>
inoremap <M-p> <End>

inoremap <M-,> <esc>xi
inoremap <M-.> <right><esc>xi

nnoremap ;a ^
nnoremap ;f $

inoremap <leader>fw <esc>:up<cr>
vnoremap <leader>ss xi""<esc>P
